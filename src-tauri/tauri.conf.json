{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Apothekensoft",
	"version": "0.1.3",
	"identifier": "com.supermann.apothekensoft",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "Apothekensoft",
				"width": 300,
				"height": 300,
				"resizable": false,
				"alwaysOnTop": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"createUpdaterArtifacts": true,
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENCN0E4MTIyMTIyRTNCMEIKUldRTE95NFNJb0Y2eXpaWHhXTVRsQTVZR3lHZEhNWFFYMHFjR0p2N3lQcXFaT3JSYjNoZGs5ZHgK",
			"endpoints": [
				"https://github.com/s1adem4n/apothekensoft/releases/latest/download/latest.json"
			],
			"windows": {
				"installMode": "passive"
			}
		}
	}
}
